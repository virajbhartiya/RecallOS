{
  "manifest_version": 3,
  "name": "Cognia",
  "version": "0.1.0",
  "description": "Blockchain-verified, AI-powered knowledge graph for capturing and retrieving your digital context.",
  "icons": {
    "16": "icon-16.png",
    "32": "icon-32.png",
    "48": "icon-48.png",
    "128": "icon-128.png",
    "256": "icon-256.png",
    "512": "icon-512.png"
  },
  "action": {
    "default_title": "Cognia",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon-16.png",
      "32": "icon-32.png",
      "48": "icon-48.png",
      "128": "icon-128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": false,
      "match_about_blank": false
    }
  ],
  "permissions": ["activeTab", "scripting", "tabs", "storage", "webNavigation", "cookies"],
  "host_permissions": [
    "<all_urls>",
    "*://chatgpt.com/*",
    "*://*.chatgpt.com/*",
    "*://openai.com/*",
    "*://*.openai.com/*",
    "*://claude.ai/*",
    "*://*.claude.ai/*",
    "*://anthropic.com/*",
    "*://*.anthropic.com/*"
  ],
  "web_accessible_resources": [
    {
      "resources": ["black-transparent.svg"],
      "matches": ["<all_urls>"]
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "cognia@cognia.com",
      "strict_min_version": "109.0"
    }
  }
}
