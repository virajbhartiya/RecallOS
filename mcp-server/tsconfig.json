{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": ".",
    "types": ["node"],
    "resolveJsonModule": true
  },
  "include": ["src/**/*"],
  "typeRoots": [
    "./src/types",
    "./node_modules/@types"
  ]
}


