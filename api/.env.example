# Database Configuration
DATABASE_URL="postgresql://recall_user:securepassword@localhost:5432/recallos"

# Application Configuration
NODE_ENV=development
PORT=3000
GEMINI_API_KEY=
# Optional: Add other environment variables as needed
# JWT_SECRET=your_jwt_secret_here
# PRIVY_APP_ID=your_privy_app_id_here



# ===========================================
# Avail DA Configuration
# ===========================================

# Avail RPC Endpoint
# Testnet: wss://rpc-avail-turing.polkadot.io
# Mainnet: wss://rpc-avail.polkadot.io (when available)
AVAIL_RPC_URL=wss://rpc-avail-turing.polkadot.io

# Avail Wallet Seed Phrase
# Generate at: https://availproject.org/ or use Polkadot.js extension
# IMPORTANT: Keep this secure and never commit to version control
AVAIL_SEED_PHRASE=your_avail_seed_phrase_here

# ===========================================
# Avail Nexus Configuration
# ===========================================

# Nexus RPC Endpoint
# Documentation: https://docs.availproject.org/
NEXUS_RPC_URL=https://nexus.avail.so

# Nexus API Key
# Get from: Avail Nexus Developer Portal (coming soon)
NEXUS_API_KEY=your_nexus_api_key_here

# Target Chains for Cross-Chain Propagation
# Comma-separated list of supported chains
TARGET_CHAINS=ethereum,polygon,arbitrum

# ===========================================
# Server Configuration
# ===========================================

# Server Port
PORT=3000

# Environment
NODE_ENV=development

# ===========================================
# Optional: Advanced Configuration
# ===========================================

# Avail Network (testnet/mainnet)
AVAIL_NETWORK=testnet

# Nexus Environment (dev/staging/production)
NEXUS_ENV=dev

# Cross-chain submission timeout (milliseconds)
NEXUS_TIMEOUT=30000

# Avail transaction retry attempts
AVAIL_RETRY_ATTEMPTS=3